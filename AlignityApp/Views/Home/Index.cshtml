@model AlignityApp.ViewModels.HomeViewModel
@{
    Layout = "_LayoutApp";
    ViewBag.Title = "Accueil";
}

<header>
    <div class="container">
        <h1>Page en construction</h1>
    </div>
</header>
<main>
    <section class="intro-section">
        <div class="container">
            <h2>Nous travaillons dur pour vous offrir un site web de qualité</h2>
            <p>Nous vous remercions de votre patience pendant que nous travaillons à la création de notre site web.</p>
        </div>
    </section>
    <section class="progress-section">
        <div class="container">
            <h3>Progression des travaux</h3>
            <div class="row">
                <div class="col-md-4">
                    <h4>Design</h4>
                    <div class="progress">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 80%;" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100">80%</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <h4>Développement</h4>
                    <div class="progress">
                        <div class="progress-bar bg-info" role="progressbar" style="width: 60%;" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100">60%</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <h4>Tests</h4>
                    <div class="progress">
                        <div class="progress-bar bg-warning" role="progressbar" style="width: 40%;" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100">40%</div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>


